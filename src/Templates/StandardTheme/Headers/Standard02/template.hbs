<section class="relative w-full px-8 text-gray-700 bg-white body-font">
  <div class="container flex flex-col flex-wrap items-center justify-between py-5 mx-auto md:flex-row max-w-7xl">
    <a href="#_" class="relative z-10 flex items-center w-auto text-xl font-extrabold leading-none text-black select-none">
      Theen Wind<span class="text-{{>color value=colors opacity="normal"}}">.</span>
    </a>

    <nav class="top-0 left-0 z-0 flex items-center justify-center w-full h-full py-5 -ml-0 space-x-5 text-base md:-ml-5 md:py-0 md:absolute">
      {{#each mainMenus}}
      <a href="{{this.url}}"
         class="relative font-medium leading-6 text-gray-600 transition duration-150 ease-out hover:text-gray-900" x-data="{ hover: false }" @mouseenter="hover = true" @mouseleave="hover = false">
        <span class="block">{{this.label}}</span>
      </a>
      {{/each}}
    </nav>

    <div class="relative z-10 inline-flex items-center space-x-3 md:ml-5 lg:justify-end">
      <a href="#" class="{{>rounded radius=borders.radius}} inline-flex items-center justify-center px-4 py-2 text-base font-medium leading-6 text-gray-600 whitespace-no-wrap bg-white border border-gray-200 hover:bg-gray-50">
        Sign in
      </a>
      <span class="inline-flex {{>rounded radius=borders.radius}}">
        <a href="#" class="bg-{{>color value=colors opacity="normal"}} hover:bg-{{>color value=colors opacity="darker"}} inline-flex items-center justify-center px-4 py-2 text-base font-medium leading-6 text-white whitespace-no-wrap {{>rounded radius=borders.radius}}">
          Sign up
        </a>
      </span>
    </div>
  </div>
</section>
